[
    {
        "role": "system",
        "content": "{{prompt_message}}"
    }
  {{#if messages}}
    {{#each messages}}
      {{#if (eq authorRole "end-user")}},
    {
        "role": "user",
        "content": "{{content}}"
    }
      {{else}},
    {
        "role": "assistant",
        "content": "{{content}}"
    }
      {{/if}}
    {{/each}}
  {{/if}}
  {{#if new_message}},
    {
        "role": "user",
        "content": "{{new_message}}"
    }
  {{/if}}
]
